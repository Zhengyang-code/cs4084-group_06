<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <!-- 这里用 ConstraintLayout 来排版，也可换成 LinearLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- 城市名称 -->
        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New York"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0" />

        <!-- 城市天气/详情 —— 你在代码里 findViewById 的这个控件 -->
        <TextView
            android:id="@+id/tv_city_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cloudy • 12 ℃"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="@id/tv_city_name"
            app:layout_constraintTop_toBottomOf="@id/tv_city_name"
            app:layout_constraintEnd_toEndOf="@id/tv_city_name"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 收藏按钮：点一下将城市加入/移出“我的收藏” -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_favorite"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/favorite"
            android:textAllCaps="false"
            android:icon="@drawable/ic_favorite"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:backgroundTint="@color/primary"
            app:cornerRadius="20dp"
            app:iconTint="@color/white"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/btn_remove"
            app:layout_constraintTop_toBottomOf="@id/tv_city_details"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 删除按钮：从列表里移除该城市 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_remove"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/remove"
            android:textAllCaps="false"
            android:icon="@drawable/ic_remove"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            app:backgroundTint="@android:color/darker_gray"
            app:cornerRadius="20dp"
            app:iconTint="@color/white"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_favorite"
            app:layout_constraintBottom_toBottomOf="@id/btn_favorite" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
